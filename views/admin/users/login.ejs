<%- include('../../partials/header.ejs')%>
<div class="d-flex flex-column justify-content-center" style="max-width: 400px; margin: auto; margin-top: 10%;">
    <form action="/authenticate" method="POST">
        <div class="card">
            <div class="card-header text-center">
                <h2>Restrict Area <small><i class="fas fa-user-lock"></i></small></h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>E-mail</label>
                    <input type="email" name="email" class="form-control" placeholder="Type your e-mail" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Type your password" required >
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn-block btn btn-success">Login</button>
            </div>
        </div>
        <div class="mt-2">
            <a href="/">Go home <i class="fas fa-home"></i></a>
        </div>
    </form>
</div>
