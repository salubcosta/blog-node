<%- include('../../partials/header.ejs')%>
<%- include('../../partials/navbarAdmin.ejs')%>
<div class="container">
    <form method="POST" action="/categories/edit">
        <div class="card">
            <div class="card-header">
                <h1 class="float-left">Category <small>- Edit</small></h1>
                <a href="/admin/categories" class="float-right btn btn-secondary">Goback</a>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="lbcat">Category</label>
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <input type="text" id="lbcat" name="title" placeholder="Type your category" class="form-control" value="<%= category.title%>">
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-success">Save</button>
            </div>
        </div>
    </form>
</div>
<%- include('../../partials/footer.ejs')%>